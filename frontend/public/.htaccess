RewriteEngine On

<IfModule mod_headers.c>
  Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0" "expr=%{REQUEST_URI} =~ m#^/(admin/api|api/(auth|order))/#"
  Header set Pragma "no-cache" "expr=%{REQUEST_URI} =~ m#^/(admin/api|api/(auth|order))/#"
  Header set Expires "0" "expr=%{REQUEST_URI} =~ m#^/(admin/api|api/(auth|order))/#"

  <FilesMatch "\.(js|css|png|jpg|jpeg|gif|svg|webp|woff2|woff|ttf|ico)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "\.(html)$">
    Header set Cache-Control "public, max-age=3600, must-revalidate"
  </FilesMatch>
  <Files "products.json">
    Header set Cache-Control "public, max-age=300, must-revalidate"
  </Files>
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType text/html "access plus 1 hour"
</IfModule>

<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json image/svg+xml
</IfModule>

<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/css application/javascript application/json image/svg+xml
</IfModule>

FileETag MTime Size

# Allow existing files and directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Do not rewrite API endpoints
RewriteRule ^api/ - [L]
RewriteRule ^admin/api/ - [L]

# SPA fallback
RewriteRule ^ index.html [L]
